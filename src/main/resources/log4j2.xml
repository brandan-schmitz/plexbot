<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Plexbot" status="INFO" strict="true">
    <Appenders>
        <Console name="Console Appender">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Filters>
                <ThresholdFilter level="INFO"/>
            </Filters>
        </Console>

    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console Appender"/>
        </Root>
        <Logger name="com.zaxxer.hikari" level="ERROR">
            <AppenderRef ref="Console Appender"/>
        </Logger>
        <Logger name="org.hibernate" level="ERROR">
            <AppenderRef ref="Console Appender"/>
        </Logger>
        <Logger name="org.cfg4j" level="ERROR">
            <AppenderRef ref="Console Appender"/>
        </Logger>
        <Logger name="com.github.Omertron" level="DEBUG">
            <AppenderRef ref="Console Appender"/>
        </Logger>
    </Loggers>
</Configuration>